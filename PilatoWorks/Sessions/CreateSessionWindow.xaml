<Window x:Class="PilatoWorks.Sessions.CreateSessionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PilatoWorks.Sessions"
        mc:Ignorable="d" WindowState="Maximized"
        Title="Create Session" Height="450" Width="800"
		Loaded="Window_Loaded">

	<ScrollViewer>
		<Grid HorizontalAlignment="Center">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition Width="Auto" MinWidth="200"/>
			</Grid.ColumnDefinitions>

			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
			</Grid.RowDefinitions>

			<Label Content="Session Name" Grid.Row="0" Grid.Column="0" Margin="10" Padding="5"/>
			<TextBox x:Name="sessionNameTextBox" Grid.Row="0" Grid.Column="1" Margin="10" Padding="5"/>

			<Label Content="Session Day" Grid.Row="1" Grid.Column="0" Margin="10" Padding="5"/>
			<ComboBox x:Name="sessionDayComboBox" Grid.Row="1" Grid.Column="1" Margin="10" Padding="5">
				<ComboBoxItem Content="Monday" />
				<ComboBoxItem Content="Tuesday" />
				<ComboBoxItem Content="Wednesday" />
				<ComboBoxItem Content="Thursday" />
				<ComboBoxItem Content="Friday" />
				<ComboBoxItem Content="Saturday" />
			</ComboBox>

			<Label Content="Slot" Grid.Row="2" Grid.Column="0" Margin="10" Padding="5"/>
			<ComboBox x:Name="sessionSlotComboBox" Grid.Row="2" Grid.Column="1" Margin="10" Padding="5">
				<ComboBoxItem Content="7 AM" />
				<ComboBoxItem Content="8 AM" />
				<ComboBoxItem Content="9 AM" />
				<ComboBoxItem Content="10 AM" />
				<ComboBoxItem Content="11 AM" />
				<ComboBoxItem Content="12 PM" />
				<ComboBoxItem Content="1 PM" />
				<ComboBoxItem Content="2 PM" />
				<ComboBoxItem Content="3 PM" />
				<ComboBoxItem Content="4 PM" />
				<ComboBoxItem Content="5 PM" />
				<ComboBoxItem Content="6 PM" />
				<ComboBoxItem Content="7 PM" />
			</ComboBox>

			<Label Content="Type" Grid.Row="3" Grid.Column="0" Margin="10" Padding="5"/>
			<ComboBox x:Name="sessionTypeComboBox" Grid.Row="3" Grid.Column="1" Margin="10" Padding="5"/>

			<Label Content="Person Number" Grid.Row="4" Grid.Column="0" Margin="10" Padding="5"/>
			<TextBox x:Name="personNumberTextBox" Grid.Row="4" Grid.Column="1" Margin="10" Padding="5"/>

			<Label Content="Person Name" Grid.Row="5" Grid.Column="0" Margin="10" Padding="5"/>
			<TextBox x:Name="personNameTextBox" Grid.Row="5" Grid.Column="1" Margin="10" Padding="5" IsReadOnly="True"/>

			<Label Content="Trainer 1" Grid.Row="6" Grid.Column="0" Margin="10" Padding="5"/>
			<ComboBox x:Name="trainer1ComboBox" Grid.Row="6" Grid.Column="1" Margin="10" Padding="5"/>

			<Label Content="Trainer 2" Grid.Row="7" Grid.Column="0" Margin="10" Padding="5"/>
			<ComboBox x:Name="trainer2ComboBox" Grid.Row="7" Grid.Column="1" Margin="10" Padding="5"/>

			<CheckBox Content="Status" Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" Margin="10" Padding="5" IsChecked="True"/>

			<Button Content="Save" Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" Margin="10" Padding="5" MinWidth="100" MinHeight="40" Click="saveButton_Click" Style="{DynamicResource AccentButtonStyle}"/>
		</Grid>
	</ScrollViewer>
</Window>
