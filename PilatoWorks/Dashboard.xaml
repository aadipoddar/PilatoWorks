<Window x:Class="PilatoWorks.Dashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PilatoWorks"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        Title="Dashboard" Height="350" Width="300"
		Loaded="Window_Loaded" Closed="Window_Closed">
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<Button x:Name="sessionButton" Content="Session" MinWidth="100" MinHeight="40" Margin="10" Padding="5" Click="sessionButton_Click" HorizontalAlignment="Center" />
		<Button x:Name="trainerButton" Grid.Row="1" Content="Trainer" MinWidth="100" MinHeight="40" Margin="10" Padding="5" Click="trainerButton_Click" HorizontalAlignment="Center" />
		<Button x:Name="managePersonButton" Grid.Row="2" Content="Manage Person" MinWidth="100" MinHeight="40" Margin="10" Padding="5" Click="managePersonButton_Click" HorizontalAlignment="Center" />
		<Button x:Name="manageSubscriptionButton" Grid.Row="3" Content="Manage Subscription" MinWidth="100" MinHeight="40" Margin="10" Padding="5" Click="manageSubscriptionButton_Click" HorizontalAlignment="Center" />
		<Button x:Name="adminButton" Grid.Row="4" Content="Admin" MinWidth="100" MinHeight="40" Margin="10" Padding="5" Click="adminButton_Click" HorizontalAlignment="Center" />
	</Grid>
</Window>
