@page "/People"

<PageTitle>People - Reflex and Reform Pilates</PageTitle>

<div class="sessions-container">
	<div class="sessions-overlay"></div>

	<!-- Header Section -->
	<div class="sessions-header">
		<div class="header-content">
			<div class="page-title">
				<svg class="page-icon" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
					<path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z" />
				</svg>
				<h1>Client Management</h1>
			</div>
			<!-- Added Dashboard Navigation Button -->
			<div class="header-actions">
				<button class="dashboard-btn" @onclick='() => NavManager.NavigateTo("/")'>
					<span class="btn-icon">
						<svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
							<path d="M10 20v-6h4v6h5v-8h3L12 3 2 12h3v8h5z" />
						</svg>
					</span>
					Back to Dashboard
				</button>
			</div>
		</div>
	</div>

	<!-- Main Content -->
	<div class="sessions-content">
		<div class="content-card">
			<!-- Personal Information Section -->
			<div class="card-section">
				<h5 class="section-header">
					<svg class="section-icon" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
						<path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z" />
					</svg>
					Personal Information
				</h5>
				<div class="section-content">
					<div class="form-grid">
						<div class="form-group">
							<label class="form-label">Client Number</label>
							<SfTextBox Placeholder='Enter Number' CssClass="form-control"
									   FloatLabelType='@FloatLabelType.Auto' Type="InputType.Number"
									   ValueChanged="OnNumberChanged" maxlength="10" />
						</div>
						<div class="form-group">
							<label class="form-label">Full Name</label>
							<SfTextBox Placeholder='Enter Name' CssClass="form-control"
									   FloatLabelType='@FloatLabelType.Auto' @bind-Value="@_person.Name" />
						</div>
						<div class="form-group">
							<label class="form-label">Date of Birth</label>
							<SfDatePicker TValue="DateOnly" Placeholder="Select Date" CssClass="form-control"
										  FloatLabelType='@FloatLabelType.Auto' @bind-Value="@_person.DateOfBirth" />
						</div>
						<div class="form-group">
							<label class="form-label">Gender</label>
							<SfDropDownList Placeholder="Select Gender" CssClass="form-control"
											FloatLabelType='@FloatLabelType.Auto' @bind-Value="@_person.Gender" DataSource="@(new List<string> { "Male", "Female", "Other" })" />
						</div>
						<div class="form-group">
							<label class="form-label">Email</label>
							<SfTextBox Placeholder='Enter Email' CssClass="form-control"
									   FloatLabelType='@FloatLabelType.Auto' @bind-Value="@_person.Email" />
						</div>
						<div class="form-group">
							<label class="form-label">Address</label>
							<SfTextBox Placeholder='Enter Address' CssClass="form-control"
									   FloatLabelType='@FloatLabelType.Auto' @bind-Value="@_person.Address" />
						</div>
					</div>
				</div>
			</div>

			<!-- Emergency Contact Section -->
			<div class="card-section">
				<h5 class="section-header">
					<svg class="section-icon" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
						<path d="M22 3H2C.9 3 0 3.9 0 5v14c0 1.1.9 2 2 2h20c1.1 0 1.99-.9 1.99-2L24 5c0-1.1-.9-2-2-2zm0 16H2V5h20v14zM21 6h-7v5h7V6zm-1 2l-2.5 1.75L15 8V7l2.5 1.75L20 7v1zM9 12c1.65 0 3-1.35 3-3s-1.35-3-3-3-3 1.35-3 3 1.35 3 3 3zm0-4c.55 0 1 .45 1 1s-.45 1-1 1-1-.45-1-1 .45-1 1-1zm6 8.59c0-2.5-3.97-3.58-6-3.58s-6 1.08-6 3.58V18h12v-1.41zM5.48 16c.74-.5 2.22-1 3.52-1s2.77.49 3.52 1H5.48z" />
					</svg>
					Emergency Contact
				</h5>
				<div class="section-content">
					<div class="form-grid">
						<div class="form-group">
							<label class="form-label">Contact Name</label>
							<SfTextBox Placeholder='Enter Name' CssClass="form-control"
									   FloatLabelType='@FloatLabelType.Auto' @bind-Value="@_person.EmergencyName" />
						</div>
						<div class="form-group">
							<label class="form-label">Relationship</label>
							<SfTextBox Placeholder='Enter Relationship' CssClass="form-control"
									   FloatLabelType='@FloatLabelType.Auto' @bind-Value="@_person.EmergencyRelationship" />
						</div>
						<div class="form-group">
							<label class="form-label">Contact Number</label>
							<SfTextBox Placeholder='Enter Number' CssClass="form-control"
									   FloatLabelType='@FloatLabelType.Auto' @bind-Value="@_person.EmergencyNumber" />
						</div>
					</div>
				</div>
			</div>

			<!-- Medical Information Section -->
			<div class="card-section">
				<h5 class="section-header">
					<svg class="section-icon" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
						<path d="M19 3H5c-1.1 0-1.99.9-1.99 2L3 19c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-1 11h-4v4h-4v-4H6v-4h4V6h4v4h4v4z" />
					</svg>
					Medical Information
				</h5>
				<div class="section-content">
					<div class="form-grid">
						<div class="form-group">
							<label class="form-label">Existing Medical Conditions</label>
							<SfTextBox Multiline="true" CssClass="form-control"
									   FloatLabelType='@FloatLabelType.Auto' @bind-Value="@_person.ExistingMedicalCondition" />
						</div>
						<div class="form-group">
							<label class="form-label">Current Medications</label>
							<SfTextBox Multiline="true" CssClass="form-control"
									   FloatLabelType='@FloatLabelType.Auto' @bind-Value="@_person.CurrentlyOnMedication" />
						</div>
						<div class="form-group">
							<label class="form-label">Surgeries (Past 2 Years)</label>
							<SfTextBox Multiline="true" CssClass="form-control"
									   FloatLabelType='@FloatLabelType.Auto' @bind-Value="@_person.SurgeriesTwoYears" />
						</div>
					</div>
				</div>
			</div>

			<!-- Fitness Profile Section -->
			<div class="card-section">
				<h5 class="section-header">
					<svg class="section-icon" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
						<path d="M20.57 14.86L22 13.43 20.57 12 17 15.57 8.43 7 12 3.43 10.57 2 9.14 3.43 7.71 2 5.57 4.14 4.14 2.71 2.71 4.14l1.43 1.43L2 7.71l1.43 1.43L2 10.57 3.43 12 7 8.43 15.57 17 12 20.57 13.43 22l1.43-1.43L16.29 22l2.14-2.14 1.43 1.43 1.43-1.43-1.43-1.43L22 16.29z" />
					</svg>
					Fitness Profile
				</h5>
				<div class="section-content">
					<div class="form-grid">
						<div class="form-group">
							<label class="form-label">Fitness Goals</label>
							<SfTextBox Multiline="true" CssClass="form-control"
									   FloatLabelType='@FloatLabelType.Auto' @bind-Value="@_person.FitnessGoals" />
						</div>
						<div class="form-group">
							<label class="form-label">Current Fitness Level</label>
							<SfTextBox Placeholder='Enter Fitness Level' CssClass="form-control"
									   FloatLabelType='@FloatLabelType.Auto' @bind-Value="@_person.CurrentFitnessLevel" />
						</div>
						<div class="form-group">
							<label class="form-label">Exercise Frequency</label>
							<SfTextBox Placeholder='How often?' CssClass="form-control"
									   FloatLabelType='@FloatLabelType.Auto' @bind-Value="@_person.OftenExercise" />
						</div>
						<div class="form-group">
							<label class="form-label">Diet Information</label>
							<SfTextBox Placeholder='Diet details' CssClass="form-control"
									   FloatLabelType='@FloatLabelType.Auto' @bind-Value="@_person.Diet" />
						</div>
					</div>
				</div>
			</div>

			<!-- Action Buttons -->
			<div class="card-section">
				<div class="action-buttons">
					<SfButton IconCss="e-icons e-close" OnClick='() => NavManager.NavigateTo("/")'
							  Content="Close" CssClass="btn-cancel" />
					<SfButton IconCss="e-icons e-save" OnClick="OnSaveClick"
							  Content="Save Profile" CssClass="btn-save" />
				</div>
			</div>
		</div>
	</div>

	<div class="sessions-footer">
		<p>&copy; @DateTime.Now.Year A Product By <a href="https://aadisoft.vercel.app" target="_blank" class="footer-link">AadiSoft</a>. All rights reserved.</p>
	</div>
</div>

<style>
	:root {
		--primary-color: #3f51b5; /* Fitness blue/purple */
		--secondary-color: #8bc34a; /* Fresh green */
		--dark-color: #303030;
		--light-color: #f8f8f8;
		--accent-color: #ff5722; /* Energetic orange */
		--card-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
	}

	body {
		margin: 0;
		padding: 0;
	}

	.sessions-container {
		min-height: 100vh;
		display: flex;
		flex-direction: column;
		background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320"><path fill="%233f51b5" fill-opacity="0.1" d="M0,224L48,218.7C96,213,192,203,288,213.3C384,224,480,256,576,261.3C672,267,768,245,864,208C960,171,1056,117,1152,106.7C1248,96,1344,128,1392,144L1440,160L1440,0L1392,0C1344,0,1248,0,1152,0C1056,0,960,0,864,0C768,0,672,0,576,0C480,0,384,0,288,0C192,0,96,0,48,0L0,0Z"></path></svg>'), url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320"><path fill="%238bc34a" fill-opacity="0.1" d="M0,64L48,85.3C96,107,192,149,288,165.3C384,181,480,171,576,144C672,117,768,75,864,80C960,85,1056,139,1152,154.7C1248,171,1344,149,1392,138.7L1440,128L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"></path></svg>');
		background-color: #f8f9fa;
		background-repeat: no-repeat;
		background-position: top, bottom;
		padding: 2rem;
		position: relative;
	}

	.sessions-overlay {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: url('data:image/svg+xml;utf8,<svg width="20" height="20" xmlns="http://www.w3.org/2000/svg"><rect width="20" height="20" fill="none" stroke="%23000" stroke-opacity="0.03" stroke-width="1"/></svg>');
		opacity: 0.5;
		pointer-events: none;
		z-index: 0;
	}

	.sessions-header {
		margin-bottom: 2rem;
		position: relative;
		z-index: 1;
	}

	.header-content {
		display: flex;
		justify-content: space-between;
		align-items: center;
	}

	.page-title {
		display: flex;
		align-items: center;
		gap: 1rem;
	}

	.page-icon {
		width: 40px;
		height: 40px;
		color: var(--secondary-color);
		filter: drop-shadow(2px 2px 4px rgba(0,0,0,0.1));
	}

	.page-title h1 {
		margin: 0;
		font-size: 2rem;
		font-weight: 700;
		color: var(--dark-color);
	}

	/* Added Dashboard Button Styles */
	.header-actions {
		display: flex;
		align-items: center;
	}

	.dashboard-btn {
		background: linear-gradient(135deg, var(--primary-color) 0%, #5c6bc0 100%);
		border: none;
		border-radius: 50px;
		padding: 0.6rem 1.5rem;
		color: white;
		font-weight: 600;
		font-family: 'Montserrat', 'Roboto', sans-serif;
		font-size: 0.95rem;
		display: flex;
		align-items: center;
		gap: 0.75rem;
		cursor: pointer;
		transition: all 0.3s ease;
		box-shadow: 0 4px 10px rgba(63, 81, 181, 0.3);
	}

		.dashboard-btn:hover {
			transform: translateY(-2px);
			box-shadow: 0 6px 15px rgba(63, 81, 181, 0.4);
			background: linear-gradient(135deg, #4558c9 0%, #6677cc 100%);
		}

		.dashboard-btn:active {
			transform: translateY(1px);
			box-shadow: 0 2px 5px rgba(63, 81, 181, 0.3);
		}

	.btn-icon {
		width: 20px;
		height: 20px;
		display: flex;
		align-items: center;
		justify-content: center;
	}

		.btn-icon svg {
			width: 20px;
			height: 20px;
			fill: white;
		}
	/* End of Dashboard Button Styles */

	.sessions-content {
		flex-grow: 1;
		position: relative;
		z-index: 1;
	}

	.content-card {
		background-color: white;
		border-radius: 16px;
		box-shadow: var(--card-shadow);
		overflow: hidden;
		margin-bottom: 2rem;
	}

	.card-section {
		padding: 1.5rem 2rem;
		border-bottom: 1px solid rgba(0,0,0,0.06);
	}

		.card-section:last-child {
			border-bottom: none;
		}

	.section-header {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		margin: 0 0 1.25rem 0;
		font-size: 1.2rem;
		font-weight: 600;
		color: var(--dark-color);
	}

	.section-icon {
		width: 24px;
		height: 24px;
		color: var(--secondary-color);
	}

	.section-content {
		padding: 0.5rem 0;
	}

	.form-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 1.5rem;
	}

	.form-group {
		margin-bottom: 0;
	}

	.form-label {
		display: block;
		margin-bottom: 0.5rem;
		font-weight: 600;
		font-size: 0.9rem;
		color: var(--dark-color);
		position: relative;
		padding-left: 0.5rem;
	}

		.form-label::before {
			content: '';
			position: absolute;
			left: 0;
			top: 0;
			height: 100%;
			width: 3px;
			background: var(--secondary-color);
			border-radius: 2px;
		}

	.form-control {
		border-radius: 8px !important;
		border: 2px solid #e0e0e0 !important;
		transition: all 0.2s ease !important;
	}

	::deep .e-input:focus,
	::deep .e-input-group.e-control-wrapper:focus-within {
		border-color: var(--secondary-color) !important;
		box-shadow: 0 0 0 3px rgba(139, 195, 74, 0.2) !important;
	}

	.action-buttons {
		display: flex;
		justify-content: flex-end;
		gap: 1rem;
	}

	.btn-cancel {
		background-color: #e0e0e0 !important;
		color: #666 !important;
		border-color: transparent !important;
		padding: 0.6rem 1.5rem;
		border-radius: 50px;
		font-weight: 500;
		transition: all 0.3s ease;
	}

		.btn-cancel:hover {
			background-color: #d0d0d0 !important;
			transform: translateY(-2px);
		}

	.btn-save {
		background: linear-gradient(135deg, var(--secondary-color) 0%, #7cb342 100%) !important;
		border-color: transparent !important;
		padding: 0.6rem 1.5rem;
		border-radius: 50px;
		font-weight: 500;
		transition: all 0.3s ease;
		box-shadow: 0 2px 5px rgba(139, 195, 74, 0.3);
	}

		.btn-save:hover {
			box-shadow: 0 4px 8px rgba(139, 195, 74, 0.4);
			transform: translateY(-2px);
		}

	.sessions-footer {
		margin-top: auto;
		text-align: center;
		padding: 1rem;
		position: relative;
		z-index: 1;
	}

		.sessions-footer p {
			margin: 0;
			color: #777;
			font-size: 0.9rem;
		}

	/* Responsive adjustments */
	@@media (max-width: 768px) {
		.sessions-container {
			padding: 1.5rem 1rem;
		}

		.page-title h1 {
			font-size: 1.5rem;
		}

		.card-section {
			padding: 1.5rem 1rem;
		}

		.form-grid {
			grid-template-columns: 1fr;
		}

		.action-buttons {
			flex-direction: column-reverse;
			gap: 0.75rem;
		}

		.btn-cancel, .btn-save {
			width: 100%;
		}
		/* Added responsive styles for header content */
		.header-content {
			flex-direction: column;
			gap: 1rem;
			align-items: flex-start;
		}

		.dashboard-btn {
			width: 100%;
			justify-content: center;
		}
	}
</style>