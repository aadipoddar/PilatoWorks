@page "/Trainers"

<PageTitle>Trainers - Reflex and Reform Pilates</PageTitle>

<div class="sessions-container">
	<div class="sessions-overlay"></div>

	<!-- Header Section -->
	<div class="sessions-header">
		<div class="header-content">
			<div class="page-title">
				<svg class="page-icon" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
					<path d="M16 11c1.66 0 2.99-1.34 2.99-3S17.66 5 16 5c-1.66 0-3 1.34-3 3s1.34 3 3 3zm-8 0c1.66 0 2.99-1.34 2.99-3S9.66 5 8 5C6.34 5 5 6.34 5 8s1.34 3 3 3zm0 2c-2.33 0-7 1.17-7 3.5V19h14v-2.5c0-2.33-4.67-3.5-7-3.5zm8 0c-.29 0-.62.02-.97.05 1.16.84 1.97 1.97 1.97 3.45V19h6v-2.5c0-2.33-4.67-3.5-7-3.5z" />
				</svg>
				<h1>Trainer Management</h1>
			</div>
		</div>
	</div>

	<!-- Main Content -->
	<div class="sessions-content">
		<div class="content-card">
			<!-- Search Section -->
			<div class="card-section">
				<h5 class="section-header">
					<svg class="section-icon" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
						<path d="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z" />
					</svg>
					Find Trainer
				</h5>
				<div class="section-content">
					<div class="form-grid">
						<div class="form-group">
							<label class="form-label">Trainer Number</label>
							<SfTextBox Placeholder='Enter Number' CssClass="form-control"
									   FloatLabelType='@FloatLabelType.Auto' Type="InputType.Number"
									   ValueChanged="OnNumberChanged" maxlength="10" />
						</div>
					</div>
				</div>
			</div>

			<!-- Trainer Details Section -->
			<div class="card-section">
				<h5 class="section-header">
					<svg class="section-icon" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
						<path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z" />
					</svg>
					Trainer Details
				</h5>
				<div class="section-content">
					<div class="form-grid">
						<div class="form-group">
							<label class="form-label">Name</label>
							<SfTextBox Placeholder='Trainer Name' CssClass="form-control"
									   FloatLabelType='@FloatLabelType.Auto' Readonly="true"
									   Value="@_trainerName" />
						</div>
						<div class="form-group">
							<label class="form-label">Address</label>
							<SfTextBox Placeholder='Trainer Address' CssClass="form-control"
									   FloatLabelType='@FloatLabelType.Auto' Readonly="true"
									   Value="@_trainerAddress" />
						</div>
						<div class="form-group">
							<label class="form-label">Salary</label>
							<SfTextBox Placeholder='Trainer Salary' CssClass="form-control"
									   FloatLabelType='@FloatLabelType.Auto' Readonly="true"
									   Value="@_trainerSalary" />
						</div>
						<div class="form-group">
							<label class="form-label">Commission Percentage</label>
							<SfTextBox Placeholder='Commission %' CssClass="form-control"
									   FloatLabelType='@FloatLabelType.Auto' Readonly="true"
									   Value="@_trainerCommissionPercent" />
						</div>
					</div>
				</div>
			</div>

			<!-- Performance Summary Section -->
			<div class="card-section">
				<h5 class="section-header">
					<svg class="section-icon" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
						<path d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm0 16H5V5h14v14zM7 10h2v7H7zm4-3h2v10h-2zm4 6h2v4h-2z" />
					</svg>
					Performance Summary
				</h5>
				<div class="section-content">
					<div class="form-grid">
						<div class="form-group">
							<label class="form-label">Number of Sessions</label>
							<div class="summary-card">
								<div class="summary-content">
									<div class="summary-badge date">
										@_noSessions Sessions
									</div>
								</div>
							</div>
						</div>
						<div class="form-group">
							<label class="form-label">Total Sales</label>
							<div class="summary-card">
								<div class="summary-content">
									<div class="summary-badge time">
										@_totalSales
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>

			<!-- Sessions History Section -->
			<div class="card-section">
				<h5 class="section-header">
					<svg class="section-icon" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
						<path d="M19 3h-1V1h-2v2H8V1H6v2H5c-1.11 0-2 .9-2 2v14a2 2 0 002 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm0 16H5V8h14v11z" />
					</svg>
					Sessions History
				</h5>
				<div class="section-content">
					<div class="form-grid">
						<div class="form-group">
							<label class="form-label">Date Range</label>
							<SfDateRangePicker Placeholder="Get Sessions Between" TValue="DateOnly"
											   FloatLabelType='@FloatLabelType.Auto'
											   StartDate="@SessionStartDate" EndDate="@SessionEndDate"
											   CssClass="form-control">
								<DateRangePickerEvents TValue="DateOnly" ValueChange="@SessionDateChanged" />
							</SfDateRangePicker>
						</div>
					</div>

					<div class="grid-container mt-4">
						<SfGrid DataSource="@SessionDetailsModels"
								ID="_sfGrid"
								@ref="_sfGrid"
								Height="300"
								Width="100%"
								CssClass="sessions-grid">
							<GridColumns>
								<GridColumn Field="@nameof(SessionDetailsModel.SessionDate)" HeaderText="Date" Type="ColumnType.DateOnly" Width="100" />
								<GridColumn Field="@nameof(SessionDetailsModel.SlotHour)" HeaderText="Time" Type="ColumnType.Integer" Width="80" />
								<GridColumn Field="@nameof(SessionDetailsModel.PersonName)" HeaderText="Client" Type="ColumnType.String" Width="150" />
								<GridColumn Field="@nameof(SessionDetailsModel.PersonNumber)" HeaderText="Phone" Type="ColumnType.Long" Width="120" />
								<GridColumn Field="@nameof(SessionDetailsModel.SessionTypeName)" HeaderText="Session Type" Type="ColumnType.String" Width="150" />
								<GridColumn Field="@nameof(SessionDetailsModel.PerSessionCost)" HeaderText="Revenue" Type="ColumnType.Decimal" Width="100" />
								<GridColumn Field="@nameof(SessionDetailsModel.Trainer1Name)" HeaderText="Trainer 1" Type="ColumnType.String" Width="150" />
								<GridColumn Field="@nameof(SessionDetailsModel.Trainer2Name)" HeaderText="Trainer 2" Type="ColumnType.String" Width="150" />
							</GridColumns>
						</SfGrid>
					</div>
				</div>
			</div>
		</div>
	</div>

	<div class="sessions-footer">
		<p>&copy; @DateTime.Now.Year A Product By <a href="https://aadi.vercel.app" target="_blank" class="footer-link">AadiSoft</a>. All rights reserved.</p>
	</div>
</div>

<style>
	:root {
		--primary-color: #3f51b5; /* Fitness blue/purple */
		--secondary-color: #8bc34a; /* Fresh green */
		--dark-color: #303030;
		--light-color: #f8f8f8;
		--accent-color: #ff5722; /* Energetic orange */
		--card-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
	}

	body {
		margin: 0;
		padding: 0;
	}

	.sessions-container {
		min-height: 100vh;
		display: flex;
		flex-direction: column;
		background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320"><path fill="%233f51b5" fill-opacity="0.1" d="M0,224L48,218.7C96,213,192,203,288,213.3C384,224,480,256,576,261.3C672,267,768,245,864,208C960,171,1056,117,1152,106.7C1248,96,1344,128,1392,144L1440,160L1440,0L1392,0C1344,0,1248,0,1152,0C1056,0,960,0,864,0C768,0,672,0,576,0C480,0,384,0,288,0C192,0,96,0,48,0L0,0Z"></path></svg>'), url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320"><path fill="%238bc34a" fill-opacity="0.1" d="M0,64L48,85.3C96,107,192,149,288,165.3C384,181,480,171,576,144C672,117,768,75,864,80C960,85,1056,139,1152,154.7C1248,171,1344,149,1392,138.7L1440,128L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"></path></svg>');
		background-color: #f8f9fa;
		background-repeat: no-repeat;
		background-position: top, bottom;
		padding: 2rem;
		position: relative;
	}

	.sessions-overlay {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: url('data:image/svg+xml;utf8,<svg width="20" height="20" xmlns="http://www.w3.org/2000/svg"><rect width="20" height="20" fill="none" stroke="%23000" stroke-opacity="0.03" stroke-width="1"/></svg>');
		opacity: 0.5;
		pointer-events: none;
		z-index: 0;
	}

	.sessions-header {
		margin-bottom: 2rem;
		position: relative;
		z-index: 1;
	}

	.header-content {
		display: flex;
		justify-content: space-between;
		align-items: center;
	}

	.page-title {
		display: flex;
		align-items: center;
		gap: 1rem;
	}

	.page-icon {
		width: 40px;
		height: 40px;
		color: var(--secondary-color);
		filter: drop-shadow(2px 2px 4px rgba(0,0,0,0.1));
	}

	.page-title h1 {
		margin: 0;
		font-size: 2rem;
		font-weight: 700;
		color: var(--dark-color);
	}

	.sessions-content {
		flex-grow: 1;
		position: relative;
		z-index: 1;
	}

	.content-card {
		background-color: white;
		border-radius: 16px;
		box-shadow: var(--card-shadow);
		overflow: hidden;
		margin-bottom: 2rem;
	}

	.card-section {
		padding: 1.5rem 2rem;
		border-bottom: 1px solid rgba(0,0,0,0.06);
	}

		.card-section:last-child {
			border-bottom: none;
		}

	.section-header {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		margin: 0 0 1.25rem 0;
		font-size: 1.2rem;
		font-weight: 600;
		color: var(--dark-color);
	}

	.section-icon {
		width: 24px;
		height: 24px;
		color: var(--secondary-color);
	}

	.section-content {
		padding: 0.5rem 0;
	}

	.form-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 1.5rem;
	}

	.form-group {
		margin-bottom: 0;
	}

	.form-label {
		display: block;
		margin-bottom: 0.5rem;
		font-weight: 600;
		font-size: 0.9rem;
		color: var(--dark-color);
		position: relative;
		padding-left: 0.5rem;
	}

		.form-label::before {
			content: '';
			position: absolute;
			left: 0;
			top: 0;
			height: 100%;
			width: 3px;
			background: var(--secondary-color);
			border-radius: 2px;
		}

	.form-control {
		border-radius: 8px !important;
		border: 2px solid #e0e0e0 !important;
		transition: all 0.2s ease !important;
	}

	::deep .e-input:focus,
	::deep .e-input-group.e-control-wrapper:focus-within {
		border-color: var(--secondary-color) !important;
		box-shadow: 0 0 0 3px rgba(139, 195, 74, 0.2) !important;
	}

	.summary-card {
		background: linear-gradient(135deg, rgba(139, 195, 74, 0.05) 0%, rgba(139, 195, 74, 0.15) 100%);
		border-radius: 12px;
		padding: 1rem;
		border-left: 4px solid var(--secondary-color);
	}

	.summary-content {
		display: flex;
		justify-content: center;
		gap: 0.75rem;
	}

	.summary-badge {
		padding: 0.5rem 1rem;
		border-radius: 50px;
		font-size: 0.9rem;
		font-weight: 500;
		color: white;
		display: inline-block;
		box-shadow: 0 2px 5px rgba(0,0,0,0.1);
	}

		.summary-badge.date {
			background: linear-gradient(135deg, var(--primary-color) 0%, #5c6bc0 100%);
		}

		.summary-badge.time {
			background: linear-gradient(135deg, var(--secondary-color) 0%, #9ccc65 100%);
		}

	.grid-container {
		margin: 1rem 0;
	}

	.sessions-grid {
		border-radius: 8px;
		overflow: hidden;
		box-shadow: 0 2px 8px rgba(0,0,0,0.05);
	}

	::deep .e-grid {
		border-radius: 8px;
		border: none !important;
		box-shadow: 0 2px 8px rgba(0,0,0,0.05);
	}

	::deep .e-gridheader {
		background-color: var(--light-color) !important;
	}

	::deep .e-headercell {
		background-color: var(--light-color) !important;
		font-weight: 600 !important;
	}

	.sessions-footer {
		margin-top: auto;
		text-align: center;
		padding: 1rem;
		position: relative;
		z-index: 1;
	}

		.sessions-footer p {
			margin: 0;
			color: #777;
			font-size: 0.9rem;
		}

	/* Responsive adjustments */
	@@media (max-width: 768px) {
		.sessions-container {
			padding: 1.5rem 1rem;
		}

		.page-title h1 {
			font-size: 1.5rem;
		}

		.card-section {
			padding: 1.5rem 1rem;
		}

		.form-grid {
			grid-template-columns: 1fr;
		}
	}
</style>
