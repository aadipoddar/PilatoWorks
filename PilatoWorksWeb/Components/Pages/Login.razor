@page "/"

<PageTitle>Login - Reflex and Reform Pilates</PageTitle>

<div class="login-container">
	<div class="login-overlay"></div>
	<div class="login-card">
		<div class="login-header">
			<div class="logo">
				<div class="logo-icon">
					<svg class="trophy-icon" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
						<path d="M19 5h-2V3H7v2H5c-1.1 0-2 .9-2 2v1c0 2.55 1.92 4.63 4.39 4.94.63 1.5 1.98 2.63 3.61 2.96V19H7v2h10v-2h-4v-3.1c1.63-.33 2.98-1.46 3.61-2.96C19.08 12.63 21 10.55 21 8V7c0-1.1-.9-2-2-2zM5 8V7h2v3.82C5.84 10.4 5 9.3 5 8zm14 0c0 1.3-.84 2.4-2 2.82V7h2v1z" />
					</svg>
				</div>
			</div>
			<h1>Reflex and Reform</h1>
			<p class="subtitle">PILATES STUDIO MANAGEMENT</p>
		</div>

		<div class="login-body">
			<div class="welcome-message">
				<h2>Welcome Back</h2>
				<p>Enter your PIN to access the studio management system</p>
			</div>

			<div class="otp-container">
				<label for="otp-input">Access Code</label>
				<SfOtpInput Type="OtpInputType.Number"
							OnInput="CheckPassword"
							Value="@_password"
							Placeholder="CODE"
							CssClass="otp-input" />
				<div class="otp-helper">Enter your 4-digit PIN</div>
			</div>
		</div>

		<div class="login-footer">
			<p>&copy; @DateTime.Now.Year A Product By <a href="https://aadi.vercel.app" target="_blank" class="footer-link">AadiSoft</a>. All rights reserved.</p>
		</div>
	</div>
</div>

<style>
	:root {
		--primary-color: #3f51b5; /* Fitness blue/purple */
		--secondary-color: #8bc34a; /* Fresh green */
		--dark-color: #303030;
		--light-color: #f8f8f8;
		--accent-color: #ff5722; /* Energetic orange */
		--card-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
	}

	body {
		margin: 0;
		padding: 0;
		font-family: 'Montserrat', 'Roboto', sans-serif;
		background-color: #f8f9fa;
	}

	.login-container {
		min-height: 100vh;
		display: flex;
		justify-content: center;
		align-items: center;
		background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320"><path fill="%233f51b5" fill-opacity="0.1" d="M0,224L48,218.7C96,213,192,203,288,213.3C384,224,480,256,576,261.3C672,267,768,245,864,208C960,171,1056,117,1152,106.7C1248,96,1344,128,1392,144L1440,160L1440,0L1392,0C1344,0,1248,0,1152,0C1056,0,960,0,864,0C768,0,672,0,576,0C480,0,384,0,288,0C192,0,96,0,48,0L0,0Z"></path></svg>'), url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320"><path fill="%238bc34a" fill-opacity="0.1" d="M0,64L48,85.3C96,107,192,149,288,165.3C384,181,480,171,576,144C672,117,768,75,864,80C960,85,1056,139,1152,154.7C1248,171,1344,149,1392,138.7L1440,128L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"></path></svg>');
		background-color: #f8f9fa;
		background-repeat: no-repeat;
		background-position: top, bottom;
		padding: 20px;
		position: relative;
	}

	.login-overlay {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: url('data:image/svg+xml;utf8,<svg width="20" height="20" xmlns="http://www.w3.org/2000/svg"><rect width="20" height="20" fill="none" stroke="%23000" stroke-opacity="0.03" stroke-width="1"/></svg>');
		opacity: 0.5;
		pointer-events: none;
	}

	.login-card {
		background: white;
		border-radius: 16px;
		box-shadow: var(--card-shadow);
		width: 100%;
		max-width: 440px;
		overflow: hidden;
		animation: fadeIn 0.8s ease-in-out;
		position: relative;
	}

	@@keyframes fadeIn {
		from {
			opacity: 0;
			transform: translateY(20px);
		}

		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	.login-header {
		background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
		color: white;
		padding: 2.5rem 1.5rem;
		text-align: center;
		position: relative;
		overflow: hidden;
	}

		.login-header::after {
			content: "";
			position: absolute;
			width: 200%;
			height: 200%;
			top: -50%;
			left: -50%;
			background: url('data:image/svg+xml;utf8,<svg width="100" height="100" xmlns="http://www.w3.org/2000/svg"><circle cx="50" cy="50" r="40" stroke="white" stroke-opacity="0.1" stroke-width="2" fill="none"/></svg>');
			opacity: 0.3;
			animation: rotate 30s linear infinite;
			pointer-events: none;
		}

	@@keyframes rotate {
		from {
			transform: rotate(0deg);
		}

		to {
			transform: rotate(360deg);
		}
	}

	.logo {
		display: flex;
		justify-content: center;
		margin-bottom: 1.5rem;
		position: relative;
		z-index: 1;
	}

	.logo-icon {
		width: 90px;
		height: 90px;
		border-radius: 50%;
		background: rgba(255, 255, 255, 0.2);
		display: flex;
		align-items: center;
		justify-content: center;
		position: relative;
		box-shadow: 0 0 0 8px rgba(255, 255, 255, 0.1);
	}

	.trophy-icon {
		width: 50px;
		height: 50px;
		position: relative;
		z-index: 2;
		filter: drop-shadow(2px 2px 4px rgba(0, 0, 0, 0.1));
	}

	.logo-icon::before {
		content: '';
		position: absolute;
		width: 100%;
		height: 100%;
		border-radius: 50%;
		border: 2px solid rgba(255, 255, 255, 0.3);
	}

	.login-header h1 {
		margin: 0;
		font-size: 2rem;
		font-weight: 700;
		letter-spacing: 1px;
		position: relative;
		z-index: 1;
		text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
	}

	.subtitle {
		margin: 0.5rem 0 0;
		font-size: 0.8rem;
		letter-spacing: 2px;
		font-weight: 500;
		opacity: 0.9;
		position: relative;
		z-index: 1;
	}

	.login-body {
		padding: 2.5rem 2rem;
		background-image: url('data:image/svg+xml;utf8,<svg width="20" height="20" xmlns="http://www.w3.org/2000/svg"><circle cx="10" cy="10" r="2" fill="%23f0f0f0"/></svg>');
	}

	.welcome-message {
		text-align: center;
		margin-bottom: 2rem;
	}

		.welcome-message h2 {
			margin: 0;
			color: var(--dark-color);
			font-size: 1.5rem;
			font-weight: 600;
		}

		.welcome-message p {
			margin: 0.75rem 0 0;
			color: #666;
			font-size: 0.9rem;
			max-width: 280px;
			margin-left: auto;
			margin-right: auto;
			line-height: 1.4;
		}

	.otp-container {
		margin-bottom: 1.5rem;
		position: relative;
	}

		.otp-container label {
			display: block;
			margin-bottom: 0.75rem;
			color: var(--dark-color);
			font-weight: 600;
			font-size: 0.9rem;
			position: relative;
			padding-left: 0.5rem;
		}

			.otp-container label::before {
				content: '';
				position: absolute;
				left: 0;
				top: 0;
				height: 100%;
				width: 3px;
				background: var(--secondary-color);
				border-radius: 2px;
			}

	.otp-helper {
		margin-top: 0.75rem;
		font-size: 0.8rem;
		color: #6c757d;
		text-align: center;
	}

	/* Style for Syncfusion OTP input */
	::deep .e-input-group {
		box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05) !important;
	}

	::deep .e-otp .e-input {
		border: 2px solid #e0e0e0 !important;
		border-radius: 10px !important;
		height: 64px !important;
		width: 64px !important;
		font-size: 1.75rem !important;
		font-weight: bold !important;
		transition: all 0.2s ease !important;
		color: var(--primary-color) !important;
	}

		::deep .e-otp .e-input:focus {
			border-color: var(--secondary-color) !important;
			box-shadow: 0 0 0 3px rgba(139, 195, 74, 0.2) !important;
			background-color: rgba(139, 195, 74, 0.05) !important;
		}

	.login-footer {
		padding: 1.25rem;
		background-color: var(--light-color);
		border-top: 1px solid #eee;
		text-align: center;
	}

		.login-footer p {
			margin: 0;
			color: #777;
			font-size: 0.8rem;
		}

	.footer-link {
		color: var(--primary-color);
		text-decoration: none;
		font-weight: 600;
		transition: color 0.2s ease;
	}

		.footer-link:hover {
			color: var(--secondary-color);
			text-decoration: underline;
		}

	/* Responsive tweaks */
	@@media (max-width: 480px) {
		.login-card {
			max-width: 100%;
		}

		.login-header {
			padding: 2rem 1rem;
		}

		.logo-icon {
			width: 70px;
			height: 70px;
		}

		.trophy-icon {
			width: 40px;
			height: 40px;
		}

		.login-header h1 {
			font-size: 1.6rem;
		}

		::deep .e-otp .e-input {
			height: 54px !important;
			width: 54px !important;
			font-size: 1.5rem !important;
		}
	}
</style>