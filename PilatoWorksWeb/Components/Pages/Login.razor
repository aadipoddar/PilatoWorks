@page "/"

<PageTitle>Login - Reflex and Reform Pilates</PageTitle>

<div class="login-container">
    <div class="login-card">
        <div class="login-header">
            <div class="logo">
                <div class="logo-icon">
                    <i class="e-icons e-activities"></i>
                </div>
            </div>
            <h1>Reflex and Reform Pilates</h1>
            <p class="subtitle">Management System</p>
        </div>
        
        <div class="login-body">
            <div class="welcome-message">
                <h2>Welcome</h2>
                <p>Please enter your access code to continue</p>
            </div>
            
            <div class="otp-container">
                <label for="otp-input">Access Code</label>
                <SfOtpInput Type="OtpInputType.Number" 
                           OnInput="CheckPassword" 
                           Value="@_password" 
                           Placeholder="CODE"
                           CssClass="otp-input" />
                <div class="otp-helper">Enter your 4-digit access code</div>
            </div>
        </div>
        
        <div class="login-footer">
            <p>&copy; @DateTime.Now.Year A Product By <a href="https://aadi.vercel.app" target="_blank" class="footer-link">AadiSoft</a>. All rights reserved.</p>
        </div>
    </div>
</div>

<style>
    :root {
        --primary-color: #0066cc;
        --secondary-color: #17a2b8;
        --accent-color: #28a745;
        --text-color: #333;
        --light-bg: #f8f9fa;
        --card-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    }
    
    body {
        margin: 0;
        padding: 0;
        font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    }
    
    .login-container {
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        padding: 20px;
    }
    
    .login-card {
        background: white;
        border-radius: 16px;
        box-shadow: var(--card-shadow);
        width: 100%;
        max-width: 420px;
        overflow: hidden;
        animation: fadeIn 0.8s ease-in-out;
    }
    
    @@keyframes fadeIn {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }
    
    .login-header {
        background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
        color: white;
        padding: 2rem 1.5rem;
        text-align: center;
    }
    
    .logo {
        display: flex;
        justify-content: center;
        margin-bottom: 1rem;
    }
    
    .logo-icon {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        background-color: rgba(255, 255, 255, 0.2);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 36px;
    }
    
    .login-header h1 {
        margin: 0;
        font-size: 1.8rem;
        font-weight: 600;
    }
    
    .subtitle {
        margin: 0.5rem 0 0;
        font-size: 0.9rem;
        opacity: 0.8;
    }
    
    .login-body {
        padding: 2rem;
    }
    
    .welcome-message {
        text-align: center;
        margin-bottom: 2rem;
    }
    
    .welcome-message h2 {
        margin: 0;
        color: var(--text-color);
        font-size: 1.4rem;
        font-weight: 600;
    }
    
    .welcome-message p {
        margin: 0.5rem 0 0;
        color: #6c757d;
        font-size: 0.9rem;
    }
    
    .otp-container {
        margin-bottom: 1.5rem;
    }
    
    .otp-container label {
        display: block;
        margin-bottom: 0.5rem;
        color: var(--text-color);
        font-weight: 500;
        font-size: 0.9rem;
    }
    
    .otp-helper {
        margin-top: 0.75rem;
        font-size: 0.8rem;
        color: #6c757d;
        text-align: center;
    }
    
    /* Style for Syncfusion OTP input */
    ::deep .e-input-group {
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05) !important;
    }
    
    ::deep .e-otp .e-input {
        border: 2px solid #dee2e6 !important;
        border-radius: 8px !important;
        height: 54px !important;
        width: 54px !important;
        font-size: 1.5rem !important;
        font-weight: bold !important;
        transition: all 0.2s ease !important;
    }
    
    ::deep .e-otp .e-input:focus {
        border-color: var(--primary-color) !important;
        box-shadow: 0 0 0 3px rgba(0, 102, 204, 0.2) !important;
    }
    
    .login-footer {
        padding: 1rem;
        background-color: var(--light-bg);
        border-top: 1px solid #e9ecef;
        text-align: center;
    }
    
    .login-footer p {
        margin: 0;
        color: #6c757d;
        font-size: 0.8rem;
    }
    
    /* Responsive tweaks */
    @@media (max-width: 480px) {
        .login-card {
            max-width: 100%;
        }
        
        ::deep .e-otp .e-input {
            height: 48px !important;
            width: 48px !important;
        }
    }
</style>