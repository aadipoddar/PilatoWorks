@page "/ClearDues"

<PageTitle>Clear Dues - Reflex and Reform Pilates</PageTitle>

<div class="sessions-container">
	<div class="sessions-overlay"></div>

	<!-- Header Section -->
	<div class="sessions-header">
		<div class="header-content">
			<div class="page-title">
				<svg class="page-icon" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
					<path d="M11.8 10.9c-2.27-.59-3-1.2-3-2.15 0-1.09 1.01-1.85 2.7-1.85 1.78 0 2.44.85 2.5 2.1h2.21c-.07-1.72-1.12-3.3-3.21-3.81V3h-3v2.16c-1.94.42-3.5 1.68-3.5 3.61 0 2.31 1.91 3.46 4.7 4.13 2.5.6 3 1.48 3 2.41 0 .69-.49 1.79-2.7 1.79-2.06 0-2.87-.92-2.98-2.1h-2.2c.12 2.19 1.76 3.42 3.68 3.83V21h3v-2.15c1.95-.37 3.5-1.5 3.5-3.55 0-2.84-2.43-3.81-4.7-4.4z" />
				</svg>
				<h1>Clear Dues</h1>
			</div>
		</div>
	</div>

	<!-- Main Content -->
	<div class="sessions-content">
		<div class="content-card">
			<!-- Subscription Information Section -->
			<div class="card-section">
				<h5 class="section-header">
					<svg class="section-icon" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
						<path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z" />
					</svg>
					Subscription Information
				</h5>
				<div class="section-content">
					<div class="form-grid">
						<div class="form-group">
							<label class="form-label">Subscription ID</label>
							<SfTextBox Placeholder='Subscription Id' CssClass="form-control"
									   FloatLabelType='@FloatLabelType.Auto' @bind-Value="@_subscriptionId" Readonly="true" />
						</div>
						<div class="form-group">
							<label class="form-label">Person Number</label>
							<SfTextBox Placeholder='Person Number' CssClass="form-control"
									   FloatLabelType='@FloatLabelType.Auto' @bind-Value="@_personNumber" Readonly="true" />
						</div>
						<div class="form-group">
							<label class="form-label">Person Name</label>
							<SfTextBox Placeholder='Person Name' CssClass="form-control"
									   FloatLabelType='@FloatLabelType.Auto' @bind-Value="@_personName" Readonly="true" />
						</div>
						<div class="form-group">
							<label class="form-label">Booking Amount</label>
							<SfTextBox Placeholder='Booking Amount' CssClass="form-control"
									   FloatLabelType='@FloatLabelType.Auto' @bind-Value="@_booking" Readonly="true" />
						</div>
					</div>
				</div>
			</div>

			<!-- Already Paid Section -->
			<div class="card-section">
				<h5 class="section-header">
					<svg class="section-icon" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
						<path d="M20 4H4c-1.11 0-1.99.89-1.99 2L2 18c0 1.11.89 2 2 2h16c1.11 0 2-.89 2-2V6c0-1.11-.89-2-2-2zm0 14H4v-6h16v6zm0-10H4V6h16v2z" />
					</svg>
					Already Paid
				</h5>
				<div class="section-content">
					<div class="form-grid">
						<div class="form-group">
							<label class="form-label">Cash Amount</label>
							<div class="payment-input">
								<SfTextBox Placeholder='Cash' CssClass="form-control"
										   FloatLabelType='@FloatLabelType.Auto' @bind-Value="@_paidCash" Readonly="true" />
								<span class="payment-icon cash">₹</span>
							</div>
						</div>
						<div class="form-group">
							<label class="form-label">Card Payment</label>
							<div class="payment-input">
								<SfTextBox Placeholder='Card' CssClass="form-control"
										   FloatLabelType='@FloatLabelType.Auto' @bind-Value="@_paidCard" Readonly="true" />
								<span class="payment-icon card">💳</span>
							</div>
						</div>
						<div class="form-group">
							<label class="form-label">UPI Payment</label>
							<div class="payment-input">
								<SfTextBox Placeholder='UPI' CssClass="form-control"
										   FloatLabelType='@FloatLabelType.Auto' @bind-Value="@_paidUPI" Readonly="true" />
								<span class="payment-icon upi">📱</span>
							</div>
						</div>
					</div>
				</div>
			</div>

			<!-- Dues Information -->
			<div class="card-section">
				<div class="summary-card">
					<div class="summary-header">Pending Amount</div>
					<div class="summary-content">
						<div class="summary-badge dues">
							<span class="dues-amount">₹ @_dues</span>
						</div>
					</div>
				</div>
			</div>

			<!-- New Payment Section -->
			<div class="card-section">
				<h5 class="section-header">
					<svg class="section-icon" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
						<path d="M19 14V6c0-1.1-.9-2-2-2H3c-1.1 0-2 .9-2 2v8c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2zm-9 1c-1.66 0-3-1.34-3-3s1.34-3 3-3 3 1.34 3 3-1.34 3-3 3zm13-6v11c0 1.1-.9 2-2 2H4v-2h17V9h2z" />
					</svg>
					New Payment
				</h5>
				<div class="section-content">
					<div class="form-grid">
						<div class="form-group">
							<label class="form-label">Cash Amount</label>
							<div class="payment-input">
								<SfTextBox Placeholder='Cash' CssClass="form-control"
										   FloatLabelType='@FloatLabelType.Auto' @bind-Value="@_newCash" Type="InputType.Number" />
								<span class="payment-icon cash">₹</span>
							</div>
						</div>
						<div class="form-group">
							<label class="form-label">Card Payment</label>
							<div class="payment-input">
								<SfTextBox Placeholder='Card' CssClass="form-control"
										   FloatLabelType='@FloatLabelType.Auto' @bind-Value="@_newCard" Type="InputType.Number" />
								<span class="payment-icon card">💳</span>
							</div>
						</div>
						<div class="form-group">
							<label class="form-label">UPI Payment</label>
							<div class="payment-input">
								<SfTextBox Placeholder='UPI' CssClass="form-control"
										   FloatLabelType='@FloatLabelType.Auto' @bind-Value="@_newUPI" Type="InputType.Number" />
								<span class="payment-icon upi">📱</span>
							</div>
						</div>
					</div>
				</div>
			</div>

			<!-- Action Buttons -->
			<div class="card-section">
				<div class="action-buttons">
					<SfButton IconCss="e-icons e-close" OnClick="OnCancelClick" Content="Cancel" CssClass="btn-cancel" />
					<SfButton IconCss="e-icons e-save" OnClick="OnSaveClick" Content="Save Payment" CssClass="btn-save" />
				</div>
			</div>
		</div>

		<!-- Subscriptions Grid -->
		<div class="content-card">
			<div class="card-section">
				<h5 class="section-header">
					<svg class="section-icon" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
						<path d="M19 5v14H5V5h14m1.1-2H3.9c-.5 0-.9.4-.9.9v16.2c0 .4.4.9.9.9h16.2c.4 0 .9-.5.9-.9V3.9c0-.5-.5-.9-.9-.9zM11 7h6v2h-6V7zm0 4h6v2h-6v-2zm0 4h6v2h-6v-2zM7 7h2v2H7V7zm0 4h2v2H7v-2zm0 4h2v2H7v-2z" />
					</svg>
					Available Subscriptions
				</h5>
				<div class="section-content">
					<div class="grid-container">
						<SfGrid DataSource="@_validSubs"
								ID="_sfGrid"
								@ref="_sfGrid"
								Height="280"
								Width="100%"
								CssClass="sessions-grid">
							<GridEvents RowSelected="RowSelectHandler" TValue="SubscriptionDetailsModel"></GridEvents>
							<GridColumns>
								<GridColumn Field="@nameof(SubscriptionDetailsModel.SubscriptionId)" HeaderText="Subscription ID" Width="120" />
								<GridColumn Field="@nameof(SubscriptionDetailsModel.PersonName)" HeaderText="Client Name" Width="140" />
								<GridColumn Field="@nameof(SubscriptionDetailsModel.PersonNumber)" HeaderText="Phone" Width="120" />
								<GridColumn Field="@nameof(SubscriptionDetailsModel.SessionType)" HeaderText="Session Type" Width="140" />
								<GridColumn Field="@nameof(SubscriptionDetailsModel.BookingAmount)" HeaderText="Booking Amount" Width="120" />
								<GridColumn Field="@nameof(SubscriptionDetailsModel.TotalPaid)" HeaderText="Total Paid" Width="120" />
								<GridColumn Field="@nameof(SubscriptionDetailsModel.Dues)" HeaderText="Dues" Width="100" />
								<GridColumn Field="@nameof(SubscriptionDetailsModel.SubscriptionDate)" HeaderText="Date" Format="MMM dd, yyyy" Width="120" />
							</GridColumns>
						</SfGrid>
					</div>
				</div>
			</div>
		</div>
	</div>

	<div class="sessions-footer">
		<p>&copy; @DateTime.Now.Year A Product By <a href="https://aadi.vercel.app" target="_blank" class="footer-link">AadiSoft</a>. All rights reserved.</p>
	</div>
</div>

<style>
	:root {
		--primary-color: #3f51b5; /* Fitness blue/purple */
		--secondary-color: #8bc34a; /* Fresh green */
		--dark-color: #303030;
		--light-color: #f8f8f8;
		--accent-color: #ff5722; /* Energetic orange */
		--card-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
	}

	body {
		margin: 0;
		padding: 0;
	}

	.sessions-container {
		min-height: 100vh;
		display: flex;
		flex-direction: column;
		background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320"><path fill="%233f51b5" fill-opacity="0.1" d="M0,224L48,218.7C96,213,192,203,288,213.3C384,224,480,256,576,261.3C672,267,768,245,864,208C960,171,1056,117,1152,106.7C1248,96,1344,128,1392,144L1440,160L1440,0L1392,0C1344,0,1248,0,1152,0C1056,0,960,0,864,0C768,0,672,0,576,0C480,0,384,0,288,0C192,0,96,0,48,0L0,0Z"></path></svg>'), url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320"><path fill="%238bc34a" fill-opacity="0.1" d="M0,64L48,85.3C96,107,192,149,288,165.3C384,181,480,171,576,144C672,117,768,75,864,80C960,85,1056,139,1152,154.7C1248,171,1344,149,1392,138.7L1440,128L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"></path></svg>');
		background-color: #f8f9fa;
		background-repeat: no-repeat;
		background-position: top, bottom;
		padding: 2rem;
		position: relative;
	}

	.sessions-overlay {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: url('data:image/svg+xml;utf8,<svg width="20" height="20" xmlns="http://www.w3.org/2000/svg"><rect width="20" height="20" fill="none" stroke="%23000" stroke-opacity="0.03" stroke-width="1"/></svg>');
		opacity: 0.5;
		pointer-events: none;
		z-index: 0;
	}

	.sessions-header {
		margin-bottom: 2rem;
		position: relative;
		z-index: 1;
	}

	.header-content {
		display: flex;
		justify-content: space-between;
		align-items: center;
	}

	.page-title {
		display: flex;
		align-items: center;
		gap: 1rem;
	}

	.page-icon {
		width: 40px;
		height: 40px;
		color: var(--secondary-color);
		filter: drop-shadow(2px 2px 4px rgba(0,0,0,0.1));
	}

	.page-title h1 {
		margin: 0;
		font-size: 2rem;
		font-weight: 700;
		color: var(--dark-color);
	}

	.sessions-content {
		flex-grow: 1;
		position: relative;
		z-index: 1;
	}

	.content-card {
		background-color: white;
		border-radius: 16px;
		box-shadow: var(--card-shadow);
		overflow: hidden;
		margin-bottom: 2rem;
	}

	.card-section {
		padding: 1.5rem 2rem;
		border-bottom: 1px solid rgba(0,0,0,0.06);
	}

		.card-section:last-child {
			border-bottom: none;
		}

	.section-header {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		margin: 0 0 1.25rem 0;
		font-size: 1.2rem;
		font-weight: 600;
		color: var(--dark-color);
	}

	.section-icon {
		width: 24px;
		height: 24px;
		color: var(--secondary-color);
	}

	.section-content {
		padding: 0.5rem 0;
	}

	.form-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 1.5rem;
	}

	.form-group {
		margin-bottom: 0;
	}

	.form-label {
		display: block;
		margin-bottom: 0.5rem;
		font-weight: 600;
		font-size: 0.9rem;
		color: var(--dark-color);
		position: relative;
		padding-left: 0.5rem;
	}

		.form-label::before {
			content: '';
			position: absolute;
			left: 0;
			top: 0;
			height: 100%;
			width: 3px;
			background: var(--secondary-color);
			border-radius: 2px;
		}

	.form-control {
		border-radius: 8px !important;
		border: 2px solid #e0e0e0 !important;
		transition: all 0.2s ease !important;
	}

	::deep .e-input:focus,
	::deep .e-input-group.e-control-wrapper:focus-within {
		border-color: var(--secondary-color) !important;
		box-shadow: 0 0 0 3px rgba(139, 195, 74, 0.2) !important;
	}

	.payment-input {
		position: relative;
	}

	.payment-icon {
		position: absolute;
		right: 15px;
		top: 50%;
		transform: translateY(-50%);
		color: #6c757d;
		font-size: 18px;
		opacity: 0.7;
	}

	.summary-card {
		background: linear-gradient(135deg, rgba(139, 195, 74, 0.05) 0%, rgba(139, 195, 74, 0.15) 100%);
		border-radius: 12px;
		padding: 1.5rem;
		border-left: 4px solid var(--secondary-color);
	}

	.summary-header {
		font-weight: 600;
		color: var(--dark-color);
		margin-bottom: 0.75rem;
		font-size: 1.1rem;
		text-align: center;
	}

	.summary-content {
		display: flex;
		justify-content: center;
		gap: 0.75rem;
	}

	.summary-badge {
		padding: 0.75rem 2rem;
		border-radius: 50px;
		font-weight: 600;
		font-size: 1.25rem;
		color: white;
		display: inline-block;
		box-shadow: 0 4px 8px rgba(0,0,0,0.15);
	}

		.summary-badge.dues {
			background: linear-gradient(135deg, var(--primary-color) 0%, #5c6bc0 100%);
		}

	.grid-container {
		margin: 1rem 0;
	}

	.sessions-grid {
		border-radius: 8px;
		overflow: hidden;
		box-shadow: 0 2px 8px rgba(0,0,0,0.05);
	}

	::deep .e-grid {
		border-radius: 8px;
		border: none !important;
		box-shadow: 0 2px 8px rgba(0,0,0,0.05);
	}

	::deep .e-gridheader {
		background-color: var(--light-color) !important;
	}

	::deep .e-headercell {
		background-color: var(--light-color) !important;
		font-weight: 600 !important;
	}

	.action-buttons {
		display: flex;
		justify-content: flex-end;
		gap: 1rem;
	}

	.btn-cancel {
		background-color: #e0e0e0 !important;
		color: #666 !important;
		border-color: transparent !important;
		padding: 0.6rem 1.5rem;
		border-radius: 50px;
		font-weight: 500;
		transition: all 0.3s ease;
	}

		.btn-cancel:hover {
			background-color: #d0d0d0 !important;
			transform: translateY(-2px);
		}

	.btn-save {
		background: linear-gradient(135deg, var(--secondary-color) 0%, #7cb342 100%) !important;
		border-color: transparent !important;
		padding: 0.6rem 1.5rem;
		border-radius: 50px;
		font-weight: 500;
		transition: all 0.3s ease;
		box-shadow: 0 2px 5px rgba(139, 195, 74, 0.3);
	}

		.btn-save:hover {
			box-shadow: 0 4px 8px rgba(139, 195, 74, 0.4);
			transform: translateY(-2px);
		}

	.sessions-footer {
		margin-top: auto;
		text-align: center;
		padding: 1rem;
		position: relative;
		z-index: 1;
	}

		.sessions-footer p {
			margin: 0;
			color: #777;
			font-size: 0.9rem;
		}

	/* Responsive adjustments */
	@@media (max-width: 768px) {
		.sessions-container {
			padding: 1.5rem 1rem;
		}

		.page-title h1 {
			font-size: 1.5rem;
		}

		.card-section {
			padding: 1.5rem 1rem;
		}

		.form-grid {
			grid-template-columns: 1fr;
		}

		.action-buttons {
			flex-direction: column-reverse;
			gap: 0.75rem;
		}

		.btn-cancel, .btn-save {
			width: 100%;
		}
	}
</style>
